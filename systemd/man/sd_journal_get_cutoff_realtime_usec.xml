<refentry id="sd_journal_get_cutoff_realtime_usec">

        <refentryinfo>
                <title>sd_journal_get_cutoff_realtime_usec</title>
                <productname>systemd</productname>

                <authorgroup>
                        <author>
                                <contrib>Developer</contrib>
                                <firstname>Lennart</firstname>
