<refentry id="systemd-fstab-generator">

        <refentryinfo>
                <title>systemd-fstab-generator</title>
                <productname>systemd</productname>

                <authorgroup>
                        <author>
                                <contrib>Developer</contrib>
                                <firstname>Lennart</firstname>
